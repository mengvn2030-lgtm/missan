    <script>
        function toggleLanguage() {
            const body = document.body;
            const btn = document.querySelector('.lang-switch');
            const waBtn = document.getElementById('whatsapp-btn');
            
            if (body.classList.contains('en')) {
                body.classList.remove('en');
                body.dir = "rtl";
                btn.textContent = "EN";
                waBtn.style.right = "30px";
                waBtn.style.left = "auto";
                updateContent('ar');
            } else {
                body.classList.add('en');
                body.dir = "ltr";
                btn.textContent = "AR";
                waBtn.style.left = "30px";
                waBtn.style.right = "auto";
                updateContent('en');
            }
        }

        function updateContent(lang) {
            const elements = document.querySelectorAll('[data-en]');
            elements.forEach(el => {
                if (lang === 'en') {
                    if (!el.dataset.ar) el.dataset.ar = el.textContent;
                    el.textContent = el.dataset.en;
                } else {
                    el.textContent = el.dataset.ar;
                }
            });

            // Update Hero specifically
            const title = document.getElementById('hero-title');
            const desc = document.getElementById('hero-desc');
            if (lang === 'en') {
                title.textContent = "Hotel Management & Investment in Makkah";
                desc.textContent = "Excellence in hotel operations near the Holy Mosque";
            } else {
                title.textContent = "إدارة واستثمار الفنادق في مكة المكرمة";
                desc.textContent = "خبرة عريقة في تشغيل الفنادق بجوار بيت الله الحرام";
            }
        }
    </script>
