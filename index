    <script>
        // Scroll Effect
        window.addEventListener('scroll', function() {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) nav.classList.add('scrolled');
            else nav.classList.remove('scrolled');
        });

        // Language Toggle
        function toggleLanguage() {
            const body = document.body;
            const btn = document.querySelector('.btn-lang');
            const isAr = body.getAttribute('dir') === 'rtl';

            if (isAr) {
                body.setAttribute('dir', 'ltr');
                body.classList.add('en');
                btn.textContent = 'AR';
                updateTexts('en');
            } else {
                body.setAttribute('dir', 'rtl');
                body.classList.remove('en');
                btn.textContent = 'EN';
                updateTexts('ar');
            }
        }

        function updateTexts(lang) {
            const translations = {
                en: {
                    title: "Luxury Hospitality in Makkah",
                    desc: "Hotel investment, management, and operation with global standards."
                },
                ar: {
                    title: "فخامة الضيافة في قلب مكة",
                    desc: "استثمار وإدارة وتشغيل الفنادق بمعايير عالمية تليق بقدسية المكان."
                }
            };

            document.getElementById('hero-title').textContent = translations[lang].title;
            document.getElementById('hero-desc').textContent = translations[lang].desc;

            document.querySelectorAll('[data-en]').forEach(el => {
                if (lang === 'en') {
                    if (!el.dataset.ar) el.dataset.ar = el.textContent;
                    el.textContent = el.dataset.en;
                } else {
                    el.textContent = el.dataset.ar;
                }
            });
        }
    </script>
